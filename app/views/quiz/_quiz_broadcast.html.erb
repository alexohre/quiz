<% if quiz %>
	<div id="quiz_<%= quiz.id %>">
		<%# question section %>
		<div class="card border-secondary mb-3 mb-5" >
			<div class="card-header border-dark border-bottom-0 border-start bd-bm border-5 bg-quest text-center"><span class="fw-semibold text-secondary h2">Question</span> <span class="fw-bold h2"><%= quiz.question_number %></span></div>
			<div class="card-body text-secondary border-start border-5 border-dark">
				<p class="h1 text-dark text-center"><%= quiz.question %></p>
			</div>
		</div>
		<%# answer section %>
		<div data-controller="">
			<div class="card border-success mb-3 mt-5" data-show-target="">
				<div class="card-header border-success border-bottom-0 border-start bd-bm border-5 bg-answer text-center"><span class="fw-semibold text-success h2">Answer</span> </div>
				<div class="card-body border-start border-5 border-success text-success">
					<p class="text-center h2 "><%= quiz.answer %></p>
				</div>
			</div>
		</div>
	</div>
<% end %>
