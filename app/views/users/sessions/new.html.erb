<div class="container-fluid ps-md-0">
	<div class="row g-0">
		<div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
		<div class="col-md-8 col-lg-6">
			<div class="login d-flex align-items-center py-5">
				<div class="container">
					<div class="row">
						<%= render 'shared/notice' %>
						<div class="col-md-9 col-lg-6 mx-auto shadow p-5 bg-white rounded">
							<h3 class=" mb-4">Welcome back!</h3>
							<!-- Sign In Form -->
							<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
								<div class="form-floating mb-3">
									<%= f.email_field :email, autocomplete: "email", id: "floatingInput", placeholder: "name@example.com", class: "form-control"  %>
									<%# <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com"> %>
									<label for="floatingInput">Email address</label>
								</div>
								<div class="form-floating mb-3">
									<%= f.password_field :password, autocomplete: "current-password", id: "floatingPassword", class: "form-control", placeholder: "Password" %>
									<%# <input type="password" class="form-control" id="floatingPassword" placeholder="Password"> %>
									<label for="floatingPassword">Password</label>
								</div>
								<% if devise_mapping.rememberable? %>
									<div class="form-check mb-3">
										<%= f.check_box :remember_me, class: "form-check-input", id: "rememberMeCheck" %>
										<%= f.label :remember_me, class: "form-check-label", for: "rememberMeCheck" %>
									</div>
								<% end %>
								<div class="d-grid">
									<button class="btn btn-lg btn-primary btn-login text-uppercase fw-bold mb-2" type="submit">Sign in</button>
									<div class="text-center">
										<a class="small" href="#">Forgot password?</a>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<%#= render "users/shared/links" %>
